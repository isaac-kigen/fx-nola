PORT=8787
EXECUTOR_WEBHOOK_SECRET=change-me-another-secret

SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

CTRADER_ENVIRONMENT=demo
CTRADER_WS_URL=
CTRADER_APP_CLIENT_ID=your-ctrader-client-id
CTRADER_APP_CLIENT_SECRET=your-ctrader-client-secret
CTRADER_ACCESS_TOKEN=initial-or-refreshed-access-token
CTRADER_REFRESH_TOKEN=refresh-token
CTRADER_ACCOUNT_ID=1234567
CTRADER_SYMBOL_ID=1
CTRADER_ORDER_VOLUME_UNITS=10000
CTRADER_POLL_INTERVAL_MS=5000

# Risk sizing (recommended)
CTRADER_POSITION_SIZING_MODE=risk_percent
CTRADER_RISK_PERCENT=1
CTRADER_RISK_REFERENCE=balance
CTRADER_ACCOUNT_CURRENCY=USD
CTRADER_VOLUME_STEP_UNITS=1000
CTRADER_MIN_VOLUME_UNITS=1000
CTRADER_MAX_VOLUME_UNITS=1000000
CTRADER_MARKET_SLIPPAGE_BUFFER_PERCENT=0.10
# Notes:
# - risk_percent mode sizes from cTrader account snapshot (balance/equity) at execution time
# - market slippage buffer 0.10 means size to 0.90x of the 1% budget to reduce risk overshoot on fills
# - this scaffold strictly supports EURUSD risk conversion for USD/EUR account currency
